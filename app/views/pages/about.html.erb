<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width: 100, alt: "profile image", class: 'profile-img' %>
          <div class="skills">
            <% @skills.each do |skill| %>
              <div class="skills">
                <h4><%= skill.title %></h4>
                <div class="progress">
                  <div
                    class="progress-bar progress-bar-striped bg-warning"
                    role="progressbar"
                    aria-valuenow="<%= skill.percent_utilized %>"
                    aria-valuemax="100"
                    style="width: <%= skill.percent_utilized %>%;"
                  ></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    
        <div class="col-md-8">
          <p>I like to write, draw, and watch anime. I also bean and cheese burritos.</p>
    
          <p>
            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#jobHistory"
              aria-expanded="false"
              aria-controler="jobHistory"
            >
              Job History
            </button>
    
            <button
              class="btn btn-primary"
              type="button"
              data-toggle="collapse"
              data-target="#education"
              aria-expanded="false"
              aria-controler="education"
            >
              Education
            </button>
          </p>
    
          <p>
            <div class="collapse" id="jobHistory">
              <div class="card card-block">
                Job 1
              </div>
              <div class="card card-block">
                Job 2
              </div>
            </div>
    
            <div class="collapse" id="education">
              <div class="card card-block">
                School 1
              </div>
              <div class="card card-block">
                School 2
              </div>
              <div class="card card-block">
                School 3
              </div>
            </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>