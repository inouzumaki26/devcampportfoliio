<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.full_messages.each do |error| %>
      <%= alert_genrator error %>
    <% end %>
  <% end %>
  
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>
  
  <div class="form-group">
    <%= f.text_area :body, class: 'form-control', rows: 15, value: 'Content' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
